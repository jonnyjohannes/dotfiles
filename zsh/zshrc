# tab titles
precmd() {print -Pn "\e]0;%m\a"}

# prompt information
git_prompt_info() {
  ref=$(git symbolic-ref HEAD 2> /dev/null)
  if [[ -n $ref ]]; then
    echo "(%{$fg[green]%}${ref#refs/heads/}%{$reset_color%})"
  fi
}
setopt promptsubst
export PS1='[%{$fg[blue]%}%~%{$reset_color%}]$(git_prompt_info)> '

# enable colours
autoload -U colors
colors
export CLICOLOR=1

# PATHs
export PATH=/opt/homebrew/bin:$PATH
export PATH=$HOME/src/bin:$PATH

# environment managers
if command -v rbenv  &> /dev/null; then eval "$(rbenv init -)"; fi
if command -v nodenv &> /dev/null; then eval "$(nodenv init -)"; fi
if command -v pyenv  &> /dev/null; then eval "$(pyenv init -)"; fi
if command -v jenv   &> /dev/null; then eval "$(jenv init -)"; fi

# aliases
alias grep='grep --color'
alias ls='ls -G'
alias vi='nvim'
alias vim='nvim'

# keybindings
bindkey -v
bindkey '^R' history-incremental-search-backward

# hombrew zsh autocompletion
if type brew &>/dev/null
then
  FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"
  autoload -Uz compinit
  compinit
fi

# set nvim as default
export EDITOR=vi
export VISUAL=$EDITOR

# local config file
[[ -s ~/.dotfiles/zsh/zsh.local ]] && source ~/.dotfiles/zsh/zsh.local

