# alfred
cmd - tab : skhd -k 'cmd + shift - l'
cmd - space : open -a Alfred\ 5

# applications
cmd - q : open -a Arc
cmd - w : open -a Alacritty

# lock screen
cmd + alt - l : open -a ScreenSaverEngine

# vim ctrl arrows
cmd + ctrl - h : skhd -k 'left'
cmd + ctrl - j : skhd -k 'down'
cmd + ctrl - k : skhd -k 'up'
cmd + ctrl - l : skhd -k 'right'

# rectangle overrides
cmd + ctrl + shift - h : open -g "rectangle://execute-action?name=left-half"
cmd + ctrl + shift - j : open -g "rectangle://execute-action?name=bottom-half"
cmd + ctrl + shift - k : open -g "rectangle://execute-action?name=top-half"
cmd + ctrl + shift - l : open -g "rectangle://execute-action?name=right-half"
cmd + ctrl + shift - return : open -g "rectangle://execute-action?name=maximize"

