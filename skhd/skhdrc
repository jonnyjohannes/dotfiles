# alfred everything
cmd - tab : skhd -k 'cmd + shift - l'
cmd + shift - tab : open -a Alfred\ 5
cmd - space : open -a Alfred\ 5

# applications
cmd - q : open -a Alacritty
cmd - w : open -a Arc
cmd - e : open -a Obsidian

# lock screen
alt + cmd - l : open -a ScreenSaverEngine

# rectangle overrides
alt + shift - h : open -g "rectangle://execute-action?name=left-half"
alt + shift - j : open -g "rectangle://execute-action?name=bottom-half"
alt + shift - k : open -g "rectangle://execute-action?name=top-half"
alt + shift - l : open -g "rectangle://execute-action?name=right-half"
alt + shift - return : open -g "rectangle://execute-action?name=maximize"

# vim ctrl arrows
ctrl + cmd - h : skhd -k 'left'
ctrl + cmd - j : skhd -k 'down'
ctrl + cmd - k : skhd -k 'up'
ctrl + cmd - l : skhd -k 'right'

